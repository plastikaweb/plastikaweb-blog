---
const { a } = Astro.props;
---

<a
  class="bg-amber-500 text-amber-50 px-2 py-1 rounded hover:bg-amber-800 hover:text-amber-100 transition-colors duration-200 m-2"
  href={a}
>
  <slot />
</a>

<style>
  a {
    text-decoration: none;
  }
</style>

<script>
  const anchorLinks = document.querySelectorAll('a');
  anchorLinks.forEach((link) => {
    link.addEventListener('click', (e) => {
      console.log(e, 'click');
    });
  });
</script>
